  "devDependencies": {
    "jasmine": "^2.7.0",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-generic-preprocessor": "^1.1.0",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon": "^1.0.5",
    "sinon": "^4.0",
    "testcafe": "^1.9.0"
  },
  "scripts": {
    "test-unit": "node_modules/.bin/karma start",
    "setup-network-env": "docker-compose -f tests/e2e/docker-compose.yml up -d createbuckets && docker-compose -f tests/e2e/docker-compose.yml up -d",
    "teardown-network-env": "docker-compose -f tests/e2e/docker-compose.yml down",
    "test-e2e-networkless-chrome": "node_modules/.bin/testcafe --hostname localhost -c 4 -s takeOnFails=true chrome:headless tests/e2e/networkless.test.js",
    "test-e2e-networkless-firefox": "node_modules/.bin/testcafe --hostname localhost -c 4 -s takeOnFails=true firefox:headless tests/e2e/networkless.test.js",
    "test-e2e-network-api-chrome": "node_modules/.bin/testcafe --hostname localhost -c 1 -s takeOnFails=true chrome:headless tests/e2e/network_api.test.js",
    "test-e2e-network-api-firefox": "node_modules/.bin/testcafe --hostname localhost -c 1 -s takeOnFails=true firefox:headless tests/e2e/network_api.test.js"
  }
}
